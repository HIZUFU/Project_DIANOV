datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String     @id @default(uuid())
  email           String
  password        String
  name            String
  createdEmployee  Post[]
  studentProfile  Student[]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Student{
  id        String  @id @default(uuid())
  userId    String  @unique  // Должен быть unique для 1:1 связи!
  user      User    @relation(fields: [userId], references: [id])
}

model history_application{
  id String @id @default(uuid())
}

model skills_stydent{
  id String @id @default(uuid())
}

model interviews{
  id String @id @default(uuid())
}

model vacancy_skills{
  id String @id @default(uuid())
}

model reviews{//отзывы
  id String @id @default(uuid())
}

model work_schedule{//график работы
  id String @id @default(uuid())
}